# Custom prompt
function parse_git_branch() { # Git Branch
  BRANCH=`git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/\1/'`
  if [ ! "${BRANCH}" == "" ]
  then
    echo "[${BRANCH}]"
  else
    echo ""
  fi
}

function parse_git_tag() { # Git Tag
  TAG=`git describe --abbrev=0 --tags 2> /dev/null`
  if [ ! "${TAG}" == "" ]
  then
    echo "[${TAG}]"
  else
    echo ""
  fi
}

